/* CUSTOM STORY STYLE */
.grid
    display flex 
    flex-wrap wrap 
    .cam 
        width 250px
        margin 1rem
        p
            margin 0
            font-family $national

.map 
    display flex 
    flex-direction row
    margin 0 auto
    position relative
    max-width 1130px
    pointer-events none


    .islands 
        display flex 
        flex-direction column
        margin 0 auto

        .g-island 
            display flex 
            flex-direction row

        .annotation--desktop
            display none
            +mq('bp-5')            
                display grid
                grid-template-columns 1
                margin-left 4rem
                flex-grow 1
                .g-anno 
                    opacity 0.3
                    &.in-focus 
                        opacity 1
                h3 
                    font-weight bold 
                    font-family $national
                    text-transform capitalize
                    set-type-size('xx-large')
                    pointer-events all
                    cursor pointer

                ul 
                    li
                        pointer-events all
                        set-type-size('medium')
                        font-family $national-narrow
                        display flex 
                        align-items center
                        font-weight normal
                        cursor pointer
                        &.selected
                            font-weight bold 
                        .video--icon 
                            margin-left 0.5rem
                            transform scale(0.7)
                            opacity 1
                            fill $primary
                            &.is-hidden 
                                opacity 0



    .tile 
        height auto
        position relative            
        display grid 
        grid-template-columns repeat(2, 1fr)
        grid-column-gap -5px
        overflow hidden
        margin-top 0
        pointer-events none
        z-index auto
        max-width 550px
        flex-grow 2
        +mq('bp-5')
            &:nth-child(even)
                margin-top -10vh
        // grid-row-gap 205px
        // &__R2
        //     grid-template-rows 17.8% 1fr 17.8% 1fr 17.8%

        &:nth-child(even)
            transform translate(0, 0)
        .exhibit 
            display inline-block
            padding 0
            margin 0 auto
            max-width 1228px
            pointer-events none
            &-top
                z-index 10
        .cam__display
            width 81%
            height auto
            display block
            pointer-events auto
            object-fit cover
            filter saturate(0.25)
            transform scale(1)
            transform-origin center
            transition filter, transform 300ms ease-in-out
            cursor pointer
            &:nth-child(even)
                justify-self end
                margin-right 4%
            &:nth-child(odd)
                margin-left -4%
                justify-self start
                // transform translateX(140px)
            &.in-focus
                filter saturate(1)
                transform scale(1.05)
                transform-origin center
                transition filter, transform 300ms ease-in-out


    +mq('bp-5')
        .tile:nth-child(even)
            transform translate(0, 100px)
