.navigation
    position fixed 
    bottom 0
    background-color transparent
    color $primary
    width 100vw
    display flex 
    justify-content space-between
    padding 1rem 
    z-index 2500
    max-height 150px
    overflow hidden
    +mq('bp-5')
        display none
    .navigation__container 
        position relative
        display flex 
        flex-direction row
        width 100%
    .globe 
        margin-left 1rem
        position fixed
        right 1rem
        width 102px
    .animal 
        display flex 
        flex-direction column
        width 66%
        padding-bottom 2rem

        .g-anno 
            opacity 0.3
            &.in-focus 
                opacity 1
            h3 
                font-weight bold 
                font-family $national
                text-transform capitalize
                set-type-size('large')
                margin-top 0.25rem
                pointer-events all

            fieldset
                .wrapper
                    pointer-events all
                    set-type-size('root')
                    font-family $national-narrow
                    font-weight normal
                    cursor pointer
                    line-height 1
                    display flex 
                    align-items center
                    // list-style-image url('assets/images/video.svg')
                    background-position top 10px
                    margin 0.5rem 0
                    input 
                        opacity 0
                        
                    label 
                        display inline-block 
                        position relative
                        cursor pointer
                        &::before 
                            content ''
                            position absolute 
                            display inline-block 
                            left -20px
                            width 12px 
                            height 12px
                            border-radius 50%
                            border 1px solid $white
                            background $white
                        &::after 
                            content ''
                            position absolute 
                            display inline-block
                            left -17px
                            top 3px
                            border-radius 50%
                            width 8px 
                            height 8px
                            

                    input:checked
                        +label
                            &::after
                                background $primary
                    input:focus 
                        +label
                            &::before 
                                box-shadow 0 0px 8px $zooPink
                    .video--icon 
                        display none
                        margin-left 0.25rem
                        margin-right 0.5rem
                        transform scale(0.7)
                        opacity 1
                        fill $primary
                        &.is-hidden 
                            opacity 0